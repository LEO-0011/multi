# ============================================
# YAGAMI UNIVERZE Environment Configuration
# .env.example
# ============================================

# ============================================
# REQUIRED: Telegram Bot Configuration
# ============================================
# Get these from https://my.telegram.org
API_ID=12345678
API_HASH=your_api_hash_here

# Get this from @BotFather
BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Your Telegram User ID (get from @userinfobot)
ADMIN_ID=123456789

# ============================================
# REQUIRED: AI Provider Configuration
# ============================================
# Choose: anthropic or openai
AI_PROVIDER=anthropic

# Anthropic API Key (recommended)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-...

# OpenAI API Key (alternative)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# AI Model to use
AI_MODEL=claude-sonnet-4-20250514

# ============================================
# OPTIONAL: GitHub Integration
# ============================================
# GitHub Personal Access Token for private repos
# Generate at: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_...

# ============================================
# Bot Settings
# ============================================
# Number of worker threads
WORKERS=8

# Maximum concurrent bot generations
MAX_CONCURRENT_GENERATIONS=3

# Maximum generations per user (rate limiting)
MAX_GENERATIONS_PER_USER=10

# Generation cooldown in seconds
GENERATION_COOLDOWN=60

# ============================================
# Docker Configuration
# ============================================
# Docker network for generated bots
DOCKER_NETWORK=yagami_network

# Optional: Docker registry for pushing images
DOCKER_REGISTRY=

# ============================================
# Database (Optional)
# ============================================
# Database URL for storing bot metadata
# Default: SQLite (no configuration needed)
DATABASE_URL=sqlite:///yagami.db

# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/yagami

# For MySQL:
# DATABASE_URL=mysql://user:password@localhost/yagami

# ============================================
# Monitoring & Logging (Optional)
# ============================================
# Sentry DSN for error tracking
# Get from: https://sentry.io/
SENTRY_DSN=

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# Security (Optional)
# ============================================
# Allowed user IDs (comma-separated, leave empty for all)
ALLOWED_USERS=

# Enable rate limiting
ENABLE_RATE_LIMIT=true

# ============================================
# Storage (Optional)
# ============================================
# Maximum archive size in MB
MAX_ARCHIVE_SIZE=100

# Clean up generated bots after N days
CLEANUP_AFTER_DAYS=7

# ============================================
# Advanced Settings (Optional)
# ============================================
# Enable debug mode
DEBUG=false

# Enable development features
DEV_MODE=false

# Timezone
TIMEZONE=UTC
